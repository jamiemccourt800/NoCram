# Production environment template
# Copy this to .env.production and fill in your production values

# Server Configuration
NODE_ENV=production
PORT=4000
CLIENT_URL=https://your-app.com

# Database (Use production database URL)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Authentication (Generate new secrets for production!)
JWT_SECRET=generate-a-secure-random-string-here
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=generate-another-secure-random-string-here
REFRESH_TOKEN_EXPIRES_IN=7d

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=NoCram <noreply@nocram.app>

# Reminder Schedule (cron format)
REMINDER_CRON_SCHEDULE=0 9 * * *

# CORS
CORS_ORIGIN=https://your-app.com
